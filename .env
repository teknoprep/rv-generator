VOLTAGE_STOP=13.6

# Timing (seconds)
START_PULSE_TIME=2
STOP_PULSE_TIME=2
MIN_RUN_TIME=1800
RETRY_DELAY=60
MAX_START_ATTEMPTS=3

# Temperature control (Â°F)
TEMP_ENABLE=true
TEMP_START_BELOW=40.0

# INA226
I2C_BUS=1
INA226_ADDR=0x40
VOLTAGE_SAMPLE_INTERVAL=5

# Relay GPIOs (ACTIVE-HIGH)
RELAY_START_GPIO=5
