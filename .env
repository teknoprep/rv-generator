# ==============================
# RV Generator Configuration
# ==============================

# Voltage thresholds (volts)
VOLTAGE_START=12.3
VOLTAGE_STOP=12.6
VOLTAGE_RISE_CONFIRM=0.3
VOLTAGE_SAMPLE_INTERVAL=10

# Timing (seconds)
START_PULSE_TIME=8
STOP_PULSE_TIME=2
MIN_RUN_TIME=1800
RETRY_DELAY=30
MAX_START_ATTEMPTS=3

# Temperature control (Â°F)
TEMP_ENABLE=true
TEMP_GPIO=4
TEMP_START_BELOW=25.0
TEMP_SAMPLE_INTERVAL=60

# INA226
I2C_BUS=1
INA226_ADDR=0x40
VOLTAGE_SAMPLE_INTERVAL=5

# Relay GPIOs (ACTIVE-HIGH)
RELAY_START_GPIO=5
RELAY_STOP_GPIO=6

# Logging
LOG_INTERVAL=30

# GPIO chip for libgpiod
GPIO_CHIP=/dev/gpiochip4

LOG_FILE=/usr/local/rv-generator/rv-generator.log



# ==============================
# SMTP / Email Settings
# ==============================
SMTP_ENABLED=true

SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_username
SMTP_PASS=your_password
SMTP_TLS=false
SMTP_FROM=rv-generator@example.com
SMTP_TO=you@example.com
SMTP_SUBJECT=RV Alerts
